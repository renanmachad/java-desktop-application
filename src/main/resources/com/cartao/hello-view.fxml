<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextInputControl?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.cartao.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="welcomeText"/>
    <AnchorPane prefHeight="200.0" prefWidth="320.0"  xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
        <children>
            <Label layoutX="14.0" layoutY="34.0" text="USUÁRIO"/>
            <TextField fx:id="user" layoutX="83.0" layoutY="30.0" prefHeight="25.0" prefWidth="200.0"/>
            <Label layoutY="74.0" layoutX="14.0" text="SENHA"/>
            <PasswordField prefWidth="200.0" prefHeight="25.0" fx:id="passwordField" layoutX="83.0" layoutY="70.0"/>
            <Button fx:id="submit" layoutX="229.0" layoutY="134.0" mnemonicParsing="false" onAction="#submit" text="Login" />
            <Label fx:id="statusLabel" layoutX="14.0" layoutY="137.0" >
                <font>
                    <Font size="12.0" />
                </font>
            </Label>
        </children>
    </AnchorPane>
</VBox>
